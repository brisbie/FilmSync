<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MovieCatalogApp.MainWindow"
        Title="FilmSync"
        Background = "White"
        Width="800" Height="600">

    <StackPanel Orientation="Vertical">
        <!-- Logo image at the top -->
        <Image Source="avares://MovieCatalog-App/Assets/logo.png"
               Width="400" Height="200" HorizontalAlignment="Center"/>

        <!-- Navbar below the logo -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="50">
            <Button Content="Browse" Margin="10" Foreground = "Black" FontSize = "16"/>
            <Button Content="Favorites" Margin="10" Foreground = "Black" FontSize = "16"/>
            <Button Content="Movie Bot" Margin="10" Foreground = "Black" FontSize = "16"/>
            <Button Content="Settings" Margin="10" Foreground = "Black" FontSize = "16"/>
        </StackPanel>

        <!-- Rest of your content goes here -->
        <TextBlock Text="Welcome to Film Sync!" HorizontalAlignment="Center"
          FontSize = "24"
          FontWeight = "Bold"
          Foreground = "Black"
          Margin = "0, 40, 0, 0"
        />
    </StackPanel>
</Window>


