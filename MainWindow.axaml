<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MovieCatalogApp.MainWindow"
        Width="400" Height="300"
        Title="Movie Catalog">

  <DockPanel Background="#737373">

    <!-- Navbar docked at the top -->
    <Border Background="#333" Height="40" DockPanel.Dock="Top">
      <StackPanel Orientation="Horizontal" Spacing="15" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0">
        <TextBlock Text="Home" Foreground="White" FontWeight="Bold" VerticalAlignment="Center"/>
        <TextBlock Text="Movies" Foreground="White" VerticalAlignment="Center"/>
        <TextBlock Text="About" Foreground="White" VerticalAlignment="Center"/>
        <TextBlock Text="Contact" Foreground="White" VerticalAlignment="Center"/>
      </StackPanel>
    </Border>

    <!-- Main content below navbar -->
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0">
      <Image Source="avares://MovieCatalog-App/Assets/logo.png"
             Width="200"
             Height="200"
             Margin="10"/>
    </StackPanel>

  </DockPanel>
  
</Window>


