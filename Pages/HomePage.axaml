<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MovieCatalogApp.HomePage"             
             FontFamily="AnonymicePro Nerd Font"             
             Background="#EDE8CA">

  <Grid ColumnDefinitions="200,*" Background="#EDE8CA">
    <Border Grid.Column="0" Padding="10" Background="#66FFFFFF"        
            BorderBrush="Black"
            BorderThickness="2"
            CornerRadius="10">
              <!-- Left column content -->
      <Grid RowDefinitions="Auto, Auto">


        <StackPanel Grid.Row="0">
          <Image Source="avares://MovieCatalog-App/Assets/logo.png"
                 Width="200" Height="100"
                 VerticalAlignment="Top"/>
          <TextBlock x:Name="WelcomeText"
                     Text="Welcome!"
                     FontSize = "16"
                     VerticalAlignment="Top"
                     HorizontalAlignment="Left"
                     Margin="0, 10, 0, 10"/>
        </StackPanel>

        <!-- Buttons below -->
        <StackPanel Grid.Row="1" Margin="0,10,0,0">

          <Button Content="Search" Padding="10" Margin = "0, 10, 0, 10" Width = "175" Background="#77A859" CornerRadius="10" />
          <Button Content="Browse" Padding="10" Margin = "0, 10, 0, 10" Width = "175" Background="#77A859" CornerRadius="10"/>
          <Button Content="Collection" Padding="10" Margin = "0, 10, 0, 10" Width = "175" Background="#77A859" CornerRadius="10"/>
          <Button Content="Diary" Padding="10" Margin = "0, 10, 0, 10" Width = "175" Background="#77A859" CornerRadius="10"/>
          <Button Content="Recommendations" Padding="10" Margin = "0, 10, 0, 10" Width = "175" Background="#77A859" CornerRadius="10"/>
          
        </StackPanel>

      </Grid>
    </Border>

        <!-- Right column content -->
        <Grid Grid.Column="1" Margin="10, 400, 10, 10">
    <Grid RowDefinitions="Auto,Auto" RowSpacing="10">
        <!-- Trending Movies Section -->
        <Border Background="#66FFFFFF"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="10"
                Padding="10">
            <StackPanel>
                <TextBlock Text="Trending" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                <ListBox>
                    <ListBoxItem Content="Movie 1"/>
                    <ListBoxItem Content="Movie 2"/>
                    <ListBoxItem Content="Movie 3"/>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- Newly Added Movies Section -->
        <Border Background="#66FFFFFF"
                BorderBrush="Black"
                BorderThickness="2"
                CornerRadius="10"
                Padding="10"
                Grid.Row="1">
            <StackPanel>
                <TextBlock Text="Your recent movies" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
                <ListBox>
                    <ListBoxItem Content="Movie A"/>
                    <ListBoxItem Content="Movie B"/>
                    <ListBoxItem Content="Movie C"/>
                </ListBox>
            </StackPanel>
        </Border>
    </Grid>
</Grid>



  </Grid>
</UserControl>


